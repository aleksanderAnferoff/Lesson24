<h2>Записаться: </h2>


<form action="/visit" method="POST">
  
  <div class="form-group">
    <label> Выбираем себе психолога: </label>
        <select name="barber" class="form-control">
          <option <%= @psychologist == 'Sarah Connor' ? 'selected' : '' %>>  Sarah Connor</option>
          <option <%= @psychologist == 'Thanos' ? 'selected' : '' %>> Thanos</option>
          <option <%= @psychologist == 'Gus Finger' ? 'selected' : '' %>> Gus Finger</option>
          <option <%= @psychologist == 'Johnny English' ? 'selected' : '' %>> Johnny English</option>
        </select>
  </div>

  <div class="form-group">
    <label> Ваше имя</label>
    <input name="username" type="text" class="form-control"  placeholder="ФИО" value="<%=@username%>">
  </div>

  <div class="form-group">
    <label> Телефончик</label>
    <input name="phone" type="text" class="form-control"  placeholder="Циферки" value="<%=@phone%>">
  </div>

  <div class="form-group">
    <label> Когда?</label>
    <input id="datetimepiker" name="datetime" type="text" class="form-control"  placeholder="Дата и время">
  </div>

  <div class="form-group">
    <label> Выбираем любимый цвет:</label> 
    <select id="color" name="color">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>
  
  <button type="submit" class="btn btn-primary">Записываемся</button>

</form>                    

<script type="text/javascript">
  
$(function(){

    $('#color').simplecolorpicker();
    $('#datetimepiker').datetimepicker();  
});

</script>      
