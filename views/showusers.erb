<%= @results %>

<table class="table">
	
	<thead>
		<tr>
			<th>Имя</th>
			<th>Телефон</th>
			<th>Дата</th>
			<th>Специалист</th>
			<th>Любимый цвет</th>
		</tr>
	</thead>

	<tbody>
	<% @results.each do |row| %>
		<tr>
			<td><%= row['username'] %></td>
			<td><%= row['phone'] %></td>
			<td><%= row['datestamp'] %></td>
			<td><%= row['psychologist'] %></td>
			<td style="background-color: <%= row['color'] %>"><%= row['color'] %></td>
		</tr>
	<% end %>
	</tbody>
</table>